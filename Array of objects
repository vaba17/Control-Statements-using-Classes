#include<iostream>
using namespace std;
class Details
{
private:
float salary;
float roll;
public:
void getname()
{
cout << "\nEnter the Salary:";
cin >> salary;
cout << "Enter the roll:";
cin >> roll;
}
void putname()
{
cout << "Employees salary is :" << salary<< endl <<"and roll no. is" <<
roll << '\n';
}
};
int main()
{
Details det[50];
int n=0;
char ans;
do{
cout << "Enter the Employee Number:" << n+1;
det[n++].getname();
cout << "Enter another (y/n)?: " ;
cin >> ans;
cout << endl;
} while ( ans != 'n' );
for (int j=0; j<n; j++)
{
cout<< j <<endl;
cout << "\nEmployee Number is: " << j+1 << endl;
det[j].putname();
}
return 0;
}
